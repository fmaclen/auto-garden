  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: auto-garden",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Test: auto-garden",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${workspaceRoot}/test"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "TEST": "true"
      }
    },
    {
      "name": "Debug: current file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
